<cluster xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="types types.xsd cluster cluster.xsd" id="0x3456" name="Disco Ball" revision="9">
  <revisionHistory>
    <revision revision="1" summary="Initial Release"/>
    <revision revision="2" summary="Deprecated Off enum value in Rotate attribute"/>
    <revision revision="3" summary="Added pattern list feature"/>
    <revision revision="4" summary="Added Name attribute"/>
    <revision revision="5" summary="Added Reverse feature"/>
    <revision revision="6" summary="Updated columns from Data &amp; Interaction Model specs"/>
    <revision revision="7" summary="Deprecated Party feature"/>
    <revision revision="8" summary="Added WobbleSupport and WobbleSetting"/>
    <revision revision="9" summary="Made Pattern attribute non-volatile"/>
  </revisionHistory>
  <classification hierarchy="base" role="application" picsCode="DISCO" scope="Endpoint"/>
  <features>
    <feature bit="0" code="PTY" name="Party" summary="Deprecated feature">
      <deprecateConform/>
    </feature>
    <feature bit="1" code="AX" name="Axis" summary="Allows the disco ball rotational axis to change">
      <optionalConform/>
    </feature>
    <feature bit="2" code="WBL" name="Wobble" summary="Allows the disco ball to wobble on its axis as speed (dependent on Axis)">
      <optionalConform/>
    </feature>
    <feature bit="3" code="PAT" name="Pattern" summary="Supports a list of patterns to cycle through automatically">
      <optionalConform/>
    </feature>
    <feature bit="4" code="STA" name="Statistics" summary="Supports a request to statistics">
      <optionalConform/>
    </feature>
    <feature bit="5" code="REV" name="Reverse" summary="Supports a Reverse command and counterclockwise rotation">
      <otherwiseConform>
        <provisionalConform/>
        <optionalConform/>
      </otherwiseConform>
    </feature>
  </features>
  <dataTypes>
    <enum name="RotateEnum">
      <item value="0" name="Off" summary="Deprecated">
        <deprecateConform/>
      </item>
      <item value="1" name="Clockwise" summary="Rotation is currently clockwise">
        <mandatoryConform/>
      </item>
      <item value="2" name="CounterClockwise" summary="Rotation is currently counterclockwise">
        <mandatoryConform>
          <feature name="REV"/>
        </mandatoryConform>
      </item>
    </enum>
    <bitmap name="WobbleBitmap">
      <bitfield name="WobbleLeftRight" bit="0" summary="Indicate wobble left to right">
        <optionalConform/>
      </bitfield>
      <bitfield name="WobbleUpDown" bit="1" summary="Indicate wobble up and down">
        <optionalConform/>
      </bitfield>
      <bitfield name="WobbleRound" bit="2" summary="Indicate wobble around">
        <optionalConform/>
      </bitfield>
    </bitmap>
    <struct name="PatternStruct">
      <field id="0" name="Duration" type="uint16" default="0">
        <access read="true" write="true"/>
        <mandatoryConform/>
      </field>
      <field id="1" name="Rotate" type="RotateEnum" default="null">
        <access read="true" write="true"/>
        <quality nullable="true"/>
        <mandatoryConform/>
        <constraint type="desc"/>
      </field>
      <field id="2" name="Speed" type="uint8" default="null">
        <access read="true" write="true"/>
        <quality nullable="true"/>
        <mandatoryConform/>
        <constraint type="max" value="200"/>
      </field>
      <field id="3" name="Axis" type="uint8" default="null">
        <access read="true" write="true"/>
        <quality nullable="true"/>
        <mandatoryConform>
          <orTerm>
            <feature name="AX"/>
            <feature name="WBL"/>
          </orTerm>
        </mandatoryConform>
        <constraint type="max" value="90"/>
      </field>
      <field id="4" name="WobbleSpeed" type="uint8" default="null">
        <access read="true" write="true"/>
        <quality nullable="true"/>
        <otherwiseConform>
          <mandatoryConform>
            <feature name="WBL"/>
          </mandatoryConform>
          <optionalConform/>
        </otherwiseConform>
        <constraint type="max" value="200"/>
      </field>
      <field id="5" name="Passcode" type="string" default="null">
        <access read="true" write="true" fabricSensitive="true"/>
        <quality nullable="true"/>
        <mandatoryConform/>
      </field>
    </struct>
  </dataTypes>
  <attributes>
    <attribute id="0x0000" name="Run" type="bool" default="0">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform/>
    </attribute>
    <attribute id="0x0001" name="Rotate" type="RotateEnum" default="0">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform/>
    </attribute>
    <attribute id="0x0002" name="Speed" type="uint8" default="0">
      <access read="true" readPrivilege="view"/>
      <mandatoryConform/>
      <constraint type="between" from="0" to="200"/>
    </attribute>
    <attribute id="0x0003" name="Axis" type="uint8" default="0">
      <access read="true" write="true" readPrivilege="view" writePrivilege="operate"/>
      <mandatoryConform>
        <orTerm>
          <feature name="AX"/>
          <feature name="WBL"/>
        </orTerm>
      </mandatoryConform>
      <constraint type="between" from="0" to="90"/>
    </attribute>
    <attribute id="0x0004" name="WobbleSpeed" type="uint8" default="0">
      <access read="true" write="true" readPrivilege="view" writePrivilege="operate"/>
      <mandatoryConform>
        <feature name="WBL"/>
      </mandatoryConform>
      <constraint type="between" from="0" to="200"/>
    </attribute>
    <attribute id="0x0005" name="Pattern" type="list[PatternStruct Type]" default="0">
      <access read="true" write="true" readPrivilege="view" writePrivilege="manage"/>
      <quality changeOmitted="false" nullable="false" scene="false" persistence="nonVolatile" reportable="false"/>
      <mandatoryConform>
        <feature name="PAT"/>
      </mandatoryConform>
      <constraint type="max" value="16"/>
    </attribute>
    <attribute id="0x0006" name="Name" type="string" default="0">
      <access read="true" write="true" readPrivilege="view" writePrivilege="manage"/>
      <quality changeOmitted="false" nullable="false" scene="false" persistence="nonVolatile" reportable="false"/>
      <otherwiseConform>
        <provisionalConform/>
        <optionalConform/>
      </otherwiseConform>
      <constraint type="maxLength" value="16"/>
    </attribute>
    <attribute id="0x0007" name="WobbleSupport" type="WobbleBitmap">
      <access read="true" readPrivilege="view"/>
      <optionalConform>
        <feature name="WBL"/>
      </optionalConform>
      <constraint type="desc"/>
    </attribute>
    <attribute id="0x0008" name="WobbleSetting" type="WobbleBitmap">
      <access read="true" write="true" readPrivilege="view" writePrivilege="manage"/>
      <optionalConform>
        <feature name="WBL"/>
      </optionalConform>
      <constraint type="desc"/>
    </attribute>
  </attributes>
  <commands>
    <command id="0x00" name="StartRequest" response="Y">
      <access invokePrivilege="operate" timed="true"/>
      <mandatoryConform/>
      <field id="0" name="Speed" type="uint8" default="MS">
        <mandatoryConform/>
        <constraint type="max" value="200"/>
      </field>
      <field id="1" name="Rotate" type="RotateEnum" default="Clockwise">
        <optionalConform/>
      </field>
    </command>
    <command id="0x01" name="StopRequest" response="Y">
      <access invokePrivilege="operate"/>
      <mandatoryConform/>
    </command>
    <command id="0x02" name="ReverseRequest" response="Y">
      <access invokePrivilege="operate"/>
      <mandatoryConform>
        <feature name="REV"/>
      </mandatoryConform>
    </command>
    <command id="0x03" name="WobbleRequest" response="Y">
      <access invokePrivilege="operate"/>
      <mandatoryConform>
        <feature name="WBL"/>
      </mandatoryConform>
    </command>
    <command id="0x04" name="PatternRequest" response="Y">
      <access invokePrivilege="manage"/>
      <mandatoryConform>
        <feature name="PAT"/>
      </mandatoryConform>
      <field id="0" name="Passcode" type="string" default="empty">
        <mandatoryConform/>
        <constraint type="maxLength" value="6"/>
      </field>
    </command>
    <command id="0x05" name="StatsRequest" response="StatsResponse">
      <access invokePrivilege="operate"/>
      <mandatoryConform>
        <feature name="STA"/>
      </mandatoryConform>
    </command>
    <command id="0x06" name="StatsResponse" direction="responseFromServer">
      <access invokePrivilege="operate"/>
      <mandatoryConform>
        <feature name="STA"/>
      </mandatoryConform>
      <field id="0" name="LastRun" type="uint32" default="0">
        <mandatoryConform/>
      </field>
      <field id="1" name="Patterns" type="uint32" default="0">
        <optionalConform>
          <feature name="PAT"/>
        </optionalConform>
      </field>
    </command>
  </commands>
  <events>
    <event id="0x00" name="Started" priority="info">
      <access readPrivilege="view"/>
      <mandatoryConform/>
    </event>
    <event id="0x01" name="Stopped" priority="info">
      <access readPrivilege="view"/>
      <mandatoryConform/>
    </event>
    <event id="0x02" name="PatternChange" priority="info">
      <access readPrivilege="view"/>
      <optionalConform>
        <feature name="PAT"/>
      </optionalConform>
      <field id="0" name="PrevPattern" type="PatternStruct" default="null">
        <quality nullable="true"/>
        <mandatoryConform/>
      </field>
      <field id="1" name="CurPattern" type="PatternStruct">
        <mandatoryConform/>
      </field>
      <field id="2" name="NextPattern" type="PatternStruct" default="null">
        <quality nullable="true"/>
        <mandatoryConform/>
      </field>
      <field id="3" name="Label" type="string" default="null">
        <quality nullable="true"/>
        <optionalConform/>
        <constraint type="maxLength" value="32"/>
      </field>
    </event>
  </events>
</cluster>